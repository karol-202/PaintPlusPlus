<androidx.constraintlayout.widget.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	xmlns:app="http://schemas.android.com/apk/res-auto">

	<TextView
		android:id="@+id/text_x"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textAppearance="?android:attr/textAppearanceMedium"
		android:text="@string/image_x"
		android:layout_marginStart="24dp"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintTop_toTopOf="@+id/edit_layer_offset_x"
		android:layout_marginTop="10dp" />

	<TextView
		android:id="@+id/text_y"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textAppearance="?android:attr/textAppearanceMedium"
		android:text="@string/image_y"
		android:layout_marginStart="24dp"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintTop_toTopOf="@+id/edit_layer_offset_y"
		android:layout_marginTop="10dp" />

	<EditText
		android:id="@+id/edit_layer_offset_x"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginEnd="16dp"
		android:layout_marginStart="24dp"
		android:layout_marginTop="8dp"
		android:ems="10"
		android:inputType="number|numberSigned"
		app:layout_constraintLeft_toRightOf="@+id/text_x"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<EditText
		android:id="@+id/edit_layer_offset_y"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginEnd="16dp"
		android:layout_marginStart="24dp"
		android:ems="10"
		android:inputType="number|numberSigned"
		app:layout_constraintLeft_toRightOf="@+id/text_y"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/edit_layer_offset_x" />
</androidx.constraintlayout.widget.ConstraintLayout>

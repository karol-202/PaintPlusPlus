<androidx.constraintlayout.widget.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:background="@color/shape_properties">

	<TextView
		android:id="@+id/text_line_width"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginStart="16dp"
		android:layout_marginTop="8dp"
		android:text="@string/line_width"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<SeekBar
		android:id="@+id/seekBar_line_width"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginEnd="32dp"
		android:layout_marginTop="8dp"
		android:max="99"
		app:layout_constraintLeft_toRightOf="@+id/text_line_width"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<TextView
		android:id="@+id/line_width"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="8dp"
		android:text="@string/temp_100_"
		app:layout_constraintLeft_toRightOf="@+id/seekBar_line_width"
		app:layout_constraintTop_toTopOf="parent" />

	<TextView
		android:id="@+id/text_line_cap"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginStart="16dp"
		android:layout_marginTop="12dp"
		android:text="@string/line_cap"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/seekBar_line_width" />

	<Spinner
		android:id="@+id/spinner_line_cap"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginEnd="16dp"
		android:layout_marginStart="16dp"
		android:layout_marginTop="8dp"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/text_line_cap"
		app:layout_constraintBottom_toBottomOf="parent"
		android:layout_marginBottom="0dp" />

</androidx.constraintlayout.widget.ConstraintLayout>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent">
	
	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textAppearance="?android:attr/textAppearanceMedium"
		android:text="@string/image_x"
		android:id="@+id/text_x"
		android:layout_marginStart="24dp"
		app:layout_constraintLeft_toLeftOf="parent"
		android:layout_marginLeft="24dp"
		app:layout_constraintTop_toTopOf="@+id/inputLayout_image_x"
		android:layout_marginTop="10dp" />
	
	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textAppearance="?android:attr/textAppearanceMedium"
		android:text="@string/image_y"
		android:id="@+id/text_y"
		android:layout_marginStart="24dp"
		app:layout_constraintLeft_toLeftOf="parent"
		android:layout_marginLeft="24dp"
		app:layout_constraintTop_toTopOf="@+id/inputLayout_image_y"
		android:layout_marginTop="10dp" />
	
	<android.support.design.widget.TextInputLayout
		android:id="@+id/inputLayout_image_x"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginEnd="16dp"
		android:layout_marginLeft="24dp"
		android:layout_marginRight="16dp"
		android:layout_marginStart="24dp"
		android:layout_marginTop="8dp"
		app:hintEnabled="false"
		app:layout_constraintLeft_toRightOf="@+id/text_x"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintTop_toTopOf="parent">
		
		<EditText
			android:id="@+id/edit_image_x"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:ems="10"
			android:inputType="number" />
	</android.support.design.widget.TextInputLayout>
	
	<android.support.design.widget.TextInputLayout
		android:id="@+id/inputLayout_image_y"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginEnd="16dp"
		android:layout_marginLeft="24dp"
		android:layout_marginRight="16dp"
		android:layout_marginStart="24dp"
		app:hintEnabled="false"
		app:layout_constraintLeft_toRightOf="@+id/text_y"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/inputLayout_image_x">
		
		<EditText
			android:id="@+id/edit_image_y"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:ems="10"
			android:inputType="number" />
	</android.support.design.widget.TextInputLayout>
</android.support.constraint.ConstraintLayout>
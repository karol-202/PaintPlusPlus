<ScrollView
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:layout_editor_absoluteY="8dp"
	tools:layout_editor_absoluteX="8dp">
	
	<android.support.constraint.ConstraintLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content">
		
		<android.support.constraint.Guideline
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/guideline4"
			android:orientation="vertical"
			app:layout_constraintGuide_percent="0.5"
			tools:layout_editor_absoluteY="0dp"
			tools:layout_editor_absoluteX="180dp" />
		
		<TextView
			android:id="@+id/text_layer_info_name"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_marginLeft="24dp"
			android:layout_marginTop="8dp"
			android:text="@string/layer_info_name"
			app:layout_constraintLeft_toLeftOf="parent"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintRight_toLeftOf="@+id/guideline4"
			android:layout_marginRight="8dp"
			android:layout_marginStart="24dp"
			android:layout_marginEnd="8dp" />
		
		<TextView
			android:id="@+id/text_layer_info_width"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_marginLeft="24dp"
			android:layout_marginTop="12dp"
			android:text="@string/layer_info_width"
			app:layout_constraintLeft_toLeftOf="parent"
			app:layout_constraintTop_toBottomOf="@+id/text_layer_info_name"
			app:layout_constraintRight_toLeftOf="@+id/guideline4"
			android:layout_marginRight="8dp"
			android:layout_marginStart="24dp"
			android:layout_marginEnd="8dp" />
		
		<TextView
			android:id="@+id/text_layer_info_height"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_marginLeft="24dp"
			android:layout_marginTop="11dp"
			android:text="@string/layer_info_height"
			app:layout_constraintLeft_toLeftOf="parent"
			app:layout_constraintTop_toBottomOf="@+id/text_layer_info_width"
			app:layout_constraintRight_toLeftOf="@+id/guideline4"
			android:layout_marginRight="8dp"
			android:layout_marginStart="24dp"
			android:layout_marginEnd="8dp" />
		
		<TextView
			android:id="@+id/text_layer_info_x"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_marginLeft="24dp"
			android:layout_marginTop="12dp"
			android:text="@string/layer_info_x"
			app:layout_constraintLeft_toLeftOf="parent"
			app:layout_constraintTop_toBottomOf="@+id/text_layer_info_height"
			app:layout_constraintRight_toLeftOf="@+id/guideline4"
			android:layout_marginRight="8dp"
			android:layout_marginStart="24dp"
			android:layout_marginEnd="8dp" />
		
		<TextView
			android:id="@+id/text_layer_info_y"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_marginLeft="24dp"
			android:layout_marginRight="8dp"
			android:layout_marginTop="12dp"
			android:text="@string/layer_info_y"
			app:layout_constraintLeft_toLeftOf="parent"
			app:layout_constraintRight_toLeftOf="@+id/guideline4"
			app:layout_constraintTop_toBottomOf="@+id/text_layer_info_x"
			android:layout_marginStart="24dp"
			android:layout_marginEnd="8dp" />
		
		<TextView
			android:id="@+id/text_layer_info_opacity"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_marginLeft="24dp"
			android:text="@string/layer_info_opacity"
			app:layout_constraintLeft_toLeftOf="parent"
			app:layout_constraintRight_toLeftOf="@+id/guideline4"
			android:layout_marginRight="8dp"
			app:layout_constraintHorizontal_bias="0.0"
			android:layout_marginTop="12dp"
			app:layout_constraintTop_toBottomOf="@+id/text_layer_info_y"
			android:layout_marginStart="24dp"
			android:layout_marginEnd="8dp" />
		
		<TextView
			android:id="@+id/text_layer_info_mode"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_marginLeft="24dp"
			android:layout_marginTop="11dp"
			android:text="@string/layer_info_mode"
			app:layout_constraintLeft_toLeftOf="parent"
			app:layout_constraintTop_toBottomOf="@+id/text_layer_info_opacity"
			app:layout_constraintRight_toLeftOf="@+id/guideline4"
			android:layout_marginRight="8dp"
			android:layout_marginStart="24dp"
			android:layout_marginEnd="8dp" />
		
		<TextView
			android:id="@+id/text_layer_info_visibility"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_marginLeft="24dp"
			android:layout_marginTop="12dp"
			android:text="@string/layer_info_visible"
			app:layout_constraintLeft_toLeftOf="parent"
			app:layout_constraintTop_toBottomOf="@+id/text_layer_info_mode"
			app:layout_constraintRight_toLeftOf="@+id/guideline4"
			android:layout_marginRight="8dp"
			android:layout_marginStart="24dp"
			android:layout_marginEnd="8dp" />
		
		<TextView
			android:id="@+id/text_layer_info_name_value"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="16dp"
			android:text="@string/unknown"
			app:layout_constraintLeft_toLeftOf="@+id/guideline4"
			app:layout_constraintTop_toTopOf="@+id/text_layer_info_name"
			android:layout_marginStart="16dp" />
		
		<TextView
			android:id="@+id/text_layer_info_width_value"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="16dp"
			android:text="@string/unknown"
			app:layout_constraintLeft_toLeftOf="@+id/guideline4"
			app:layout_constraintTop_toTopOf="@+id/text_layer_info_width"
			android:layout_marginStart="16dp" />
		
		<TextView
			android:id="@+id/text_layer_info_height_value"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="16dp"
			android:text="@string/unknown"
			app:layout_constraintLeft_toLeftOf="@+id/guideline4"
			app:layout_constraintTop_toTopOf="@+id/text_layer_info_height"
			android:layout_marginStart="16dp" />
		
		<TextView
			android:id="@+id/text_layer_info_x_value"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="16dp"
			android:text="@string/unknown"
			app:layout_constraintLeft_toLeftOf="@+id/guideline4"
			app:layout_constraintTop_toTopOf="@+id/text_layer_info_x"
			android:layout_marginStart="16dp" />
		
		<TextView
			android:id="@+id/text_layer_info_y_value"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="16dp"
			android:text="@string/unknown"
			app:layout_constraintLeft_toLeftOf="@+id/guideline4"
			app:layout_constraintTop_toTopOf="@+id/text_layer_info_y"
			android:layout_marginStart="16dp" />
		
		<TextView
			android:id="@+id/text_layer_info_opacity_value"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="16dp"
			android:text="@string/unknown"
			app:layout_constraintLeft_toLeftOf="@+id/guideline4"
			app:layout_constraintTop_toTopOf="@+id/text_layer_info_opacity"
			android:layout_marginStart="16dp" />
		
		<TextView
			android:id="@+id/text_layer_info_mode_value"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="16dp"
			android:text="@string/unknown"
			app:layout_constraintLeft_toLeftOf="@+id/guideline4"
			app:layout_constraintTop_toTopOf="@+id/text_layer_info_mode"
			android:layout_marginStart="16dp" />
		
		<TextView
			android:id="@+id/text_layer_info_visibility_value"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="16dp"
			android:text="@string/unknown"
			app:layout_constraintLeft_toLeftOf="@+id/guideline4"
			app:layout_constraintTop_toTopOf="@+id/text_layer_info_visibility"
			android:layout_marginStart="16dp" />
	</android.support.constraint.ConstraintLayout>
</ScrollView>